{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@validation/*": ["validation/*"],
      "@middleware/*": ["middleware/*"],
      "@helpers/*": ["helpers/*"],
      "@repositories/*": ["repositories/*"],
      "@outils/*": ["outils/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}
