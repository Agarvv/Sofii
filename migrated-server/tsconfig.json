{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@validation/*": ["src/validation/*"],
      "@middleware/*": ["src/middleware/*"],
      "@helpers/*": ["src/helpers/*"],
      "@repositories/*": ["src/repositories/*"],
      "@outils/*": ["src/outils/*"],
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
}

